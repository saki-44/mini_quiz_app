<div class="container">
  <%= form_with url: answer_question_path(@question), method: :post, local: true do |form| %>
    <h2><%= "No.#{@question.id}" %></h2>
    <h3><%= @question.content %></h3>
  <div class="block">
    <div class="row">
      <% @question.choices.each do |choice| %>
        <ul>
          <%= radio_button_tag 'choice_id', choice.id, required: true %>
          <%= label_tag "choice_#{choice.id}", choice.content %>
        </ul>
      <% end %>
    </div>
    <%= form.submit "回答する" %>
  <% end %>
  </div>
</div>